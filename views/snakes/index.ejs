<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <a 
      href="/snakes/new" class=<%= title === 'Add Snake' ? 'active' : '' %>
    >
    <i class="fas fa-plus" style="color: #424242;"></i>
    </a>
  <% if (snakes.length) { %>
    <table id="list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Species</th>
          <th>DOB</th>
          <th>Edit/View Meals</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% snakes.forEach((snake) => { %>
        <tr>
          <td><%= snake.name %></td>
          <td><%= snake.species %></td>
          <td><%= snake.dateOfBirth.toISOString().slice(0,10) %></td>
          <td>
            <a href="/snakes/<%= snake._id %>/edit">
              <button><i class="far fa-file-alt fa=lg" style="color: #424242;"></i></button>
          </td>
          <td>
            <form 
              action="/snakes/<%= snake._id %>?_method=DELETE" 
              method="POST"
            >
              <button type="submit"><i class="fas fa-trash-alt" style="color: #424242;"></i></button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <h3>You havent added any snakes yet</h3>
    <% } %>
</main>

<%- include("../partials/footer") %>