<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
  <% if (snakes.length) { %>
    <table id="list">
      <thead>
        <tr>
        <th><h1><%= title %></h1></th>
        <th></th>
        <th></th>
        <th></th>
        <th><a 
            href="/snakes/new" class=<%= title === 'Add Snake' ? 'active' : '' %>
          >
          <i class="fas fa-plus" style="color: #ffffff;"></i>
          </a></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Name</td>
          <td>Species</td>
          <td>DOB</td>
          <td>Edit/View Meals</td>
          <td>Delete</td>
        </tr>
        <% snakes.forEach((snake) => { %>
        <tr>
          <td><%= snake.name %></td>
          <td><%= snake.species %></td>
          <td><%= snake.dateOfBirth.toISOString().slice(0,10) %></td>
          <td>
            <a href="/snakes/<%= snake._id %>">
              <button><i class="far fa-file-alt fa=lg" style="color: #424242;"></i></button>
          </td>
          <td>
            <form 
              action="/snakes/<%= snake._id %>?_method=DELETE" 
              method="POST"
            >
              <button type="submit"><i class="fas fa-trash-alt" style="color: #424242;"></i></button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <h3>You havent added any snakes yet</h3>
    <% } %>
</main>

<%- include("../partials/footer") %>